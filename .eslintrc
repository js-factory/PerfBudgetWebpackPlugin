{
    "extends": [
        "airbnb-base",
        "eslint:recommended"
    ],
    "env": {
        "jest": true,
        "node": true
    },
    "rules": {
        "prefer-arrow-callback": 0,
        "no-dynamic-require": 0,
        "arrow-parens": [
            2,
            "always"
        ],
        "indent" : [
            2,
            4,
            { "SwitchCase": 1 }
        ],
        "comma-dangle" : [
            2,
            "never"
        ],
        "max-statements": 2,
        "max-len": 2,
        "max-params": 2,
        "max-depth": 2,
        "complexity": [
            2,
            5
        ],
        "one-var": [
            2,
            "never"
        ],
        "no-console": [
            2,
            { 
                "allow": [
                    "warn",
                    "error"
                ]
            }
        ],
        "no-useless-rename": 2,
        "arrow-body-style": [
            2,
            "as-needed"
        ],
        "prefer-destructuring": [
            2,
            {
                "array": true,
                "object": true
            },
            {
                "enforceForRenamedProperties": true
            }
        ]
    },
    "globals": {
        "log": true
    }
}
